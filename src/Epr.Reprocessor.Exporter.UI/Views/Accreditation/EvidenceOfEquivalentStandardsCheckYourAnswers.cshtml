@using Epr.Reprocessor.Exporter.UI.ViewModels.Accreditation
@model EvidenceOfEquivalentStandardsCheckYourAnswersViewModel

@{
	ViewData["Title"] = @Localizer["title"];
}

<main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-full">
			@if (!ViewData.ModelState.IsValid)
			{
				@await Html.PartialAsync("Partials/Govuk/_ErrorSummary", ViewData.ModelState)
			}
			@using (Html.BeginForm("EvidenceOfEquivalentStandardsCheckYourAnswers", "Accreditation", FormMethod.Post))
			{
				<h1 class="govuk-heading-xl" data-testid="title">
					@Localizer["title"]
				</h1>

				<h3 class="govuk-heading-m" data-testid="sub-title">
					@Localizer["sub-title", Localizer[Model.SiteName]]
				</h3>

				<div class="govuk-inset-text">
					@Model.SiteName
					<br />
					@Model.SiteAddressLine1
					<br />
					@Model.SiteAddressLine2
					<br />
					@Model.SiteAddressLine3
				</div>

				<table class="govuk-table">
					<tbody class="govuk-table__body">
						<tr class="govuk-table__row">
							<th scope="row" class="govuk-table__header">@Localizer["file-uploaded"]</th>
							<td class="govuk-table__cell">@Model.UploadedFile</td>
							<td class="govuk-table__cell">
								<a class="govuk-link govuk-link--no-visited-state" id="prn_tonnage" href="#">
									@Localizer["change"]
								</a>
							</td>
						</tr>
						<tr class="govuk-table__row">
							<th scope="row" class="govuk-table__header">@Localizer["start-date-of-evidence"]</th>
							<td class="govuk-table__cell">@Model.ValidFrom</td>
							<td class="govuk-table__cell">
								<a class="govuk-link govuk-link--no-visited-state" id="prn_tonnage" href="#">
									@Localizer["change"]
								</a>
							</td>
						</tr>
						<tr class="govuk-table__row">
							<th scope="row" class="govuk-table__header">@Localizer["expire-date-of-evidence"]</th>
							<td class="govuk-table__cell">@Model.ExpireDate</td>
							<td class="govuk-table__cell">
								<a class="govuk-link govuk-link--no-visited-state" id="prn_tonnage" href="#">
									@Localizer["change"]
								</a>
							</td>
						</tr>
						<tr class="govuk-table__row">
							<th scope="row" class="govuk-table__header">@Localizer["more-evidence"]</th>
							<td class="govuk-table__cell">@Localizer[@Model.MoreEvidenceUpload.ToString()]</td>
							<td class="govuk-table__cell">
								<a class="govuk-link govuk-link--no-visited-state" id="prn_tonnage" href="#">
									@Localizer["change"]
								</a>
							</td>
						</tr>
					</tbody>
				</table>

				<div class="govuk-button-group">
					<button class="govuk-button" data-module="govuk-button" data-testid="continue" name="action" value="continue">
						@SharedLocalizer["saveandcontinue"]
					</button>
					<button class="govuk-button govuk-button--secondary" data-module="govuk-button" data-testid="save" name="action" value="save">
						@SharedLocalizer["saveandcomebacklater"]
					</button>
				</div>
			}
		</div>
	</div>
</main>
