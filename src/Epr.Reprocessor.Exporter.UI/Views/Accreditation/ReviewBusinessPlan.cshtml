@using ViewModels.Accreditation
@model ReviewBusinessPlanViewModel
@{
    ViewData["Title"] = Localizer["title"];
    var hiddenClass = "govuk-!-display-none";
}

<div class="govuk-width-container ">

    <a href="javascript:history.back()" class="govuk-back-link govuk-link--no-visited-state" data-testid="back-link">@SharedLocalizer["back"]</a>


    <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">


        <div class="govuk-width-container">
            <main class="govuk-main-wrapper " id="main-content" role="main">

                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-two-thirds-from-desktop">
                       
                        <h1 class="govuk-heading-l" data-testid="heading">@Localizer["heading"]</h1>
                        <h2 class="govuk-heading-m" data-testid="sub-heading">@Localizer["sub-heading"]</h2>

                        <dl class="govuk-summary-list govuk-!-margin-bottom-9">

                            <div class="govuk-summary-list__row @(Model.InfrastructurePercentage.GetValueOrDefault() > 0 ? string.Empty : hiddenClass)">
                                <dt data-testid="new-reprocessing-infrastructure" class="govuk-summary-list__key">
                                    @Localizer["new-reprocessing-infrastructure"]
                                </dt>
                                <dd data-testid="new-reprocessing-infrastructure-value" class="govuk-summary-list__value" data-testid="infrastructure">
                                    @Model.InfrastructurePercentage%
                                </dd>
                                <dd class="govuk-summary-list__actions">
                                    <a data-testid="new-reprocessing-infrastructure-change" class="govuk-link govuk-link--no-visited-state" href="#" data-testid="change-infrastructure">
                                        @Localizer["change"]
                                    </a>
                                </dd>
                            </div>

                            <div  class="govuk-summary-list__row @(Model.InfrastructurePercentage.GetValueOrDefault() > 0 ? string.Empty : hiddenClass)">
                                <dt data-testid="more-detail-infrastructure" class="govuk-summary-list__key">
                                    @Localizer["more-detail-infrastructure"]
                                </dt>
                                <dd data-testid="more-detail-infrastructure-value" class="govuk-summary-list__value" data-testid="more-details-infrastructure">
                                    @Model.InfrastructureNotes
                                </dd>
                                <dd class="govuk-summary-list__actions">
                                    <a data-testid="more-detail-infrastructure-change" class="govuk-link govuk-link--no-visited-state" href="#" data-testid="change-more-details-infrastructure">
                                        @Localizer["change"]
                                    </a>
                                </dd>
                            </div>


                            <div  class="govuk-summary-list__row @(Model.PriceSupportPercentage.GetValueOrDefault() > 0 ? string.Empty : hiddenClass)">
                                <dt data-testid="price-support" class="govuk-summary-list__key">
                                    @Localizer["price-support"]
                                </dt>
                                <dd data-testid="price-support-value" class="govuk-summary-list__value" data-testid="price-support">
                                    @Model.PriceSupportPercentage%
                                </dd>
                                <dd class="govuk-summary-list__actions">
                                    <a data-testid="price-support-change" class="govuk-link govuk-link--no-visited-state" href="#" data-testid="change-price-support">
                                        @Localizer["change"]
                                    </a>
                                </dd>
                            </div>

                            <div  class="govuk-summary-list__row @(Model.PriceSupportPercentage.GetValueOrDefault() > 0 ? string.Empty : hiddenClass)">
                                <dt data-testid="more-detail-price-support" class="govuk-summary-list__key">
                                    @Localizer["more-detail-price-support"]
                                </dt>
                                <dd data-testid="more-detail-price-support-value" class="govuk-summary-list__value" data-testid="more-details-price-support">
                                    @Model.PriceSupportNotes
                                </dd>
                                <dd class="govuk-summary-list__actions">
                                    <a data-testid="more-detail-price-support-change" class="govuk-link govuk-link--no-visited-state" href="#" data-testid="change-more-details-price-support">
                                        @Localizer["change"]
                                    </a>
                                </dd>
                            </div>
                            <div  class="govuk-summary-list__row @(Model.BusinessCollectionsPercentage.GetValueOrDefault() > 0 ? string.Empty : hiddenClass)">
                                <dt data-testid="support-business-collections" class="govuk-summary-list__key">
                                    @Localizer["support-business-collections"]
                                </dt>
                                <dd data-testid="support-business-collections-value" class="govuk-summary-list__value" data-testid="business-collections">
                                    @Model.BusinessCollectionsPercentage%
                                </dd>
                                <dd class="govuk-summary-list__actions">
                                    <a data-testid="support-business-collections-change" class="govuk-link govuk-link--no-visited-state" href="#" data-testid="change-business-collections">
                                        @Localizer["change"]
                                    </a>
                                </dd>
                            </div>

                            <div  class="govuk-summary-list__row @(Model.BusinessCollectionsPercentage.GetValueOrDefault() > 0 ? string.Empty : hiddenClass)">
                                <dt data-testid="more-detail-support-buisiness-collections" class="govuk-summary-list__key">
                                    @Localizer["more-detail-support-buisiness-collections"]
                                </dt>
                                <dd data-testid="more-detail-support-buisiness-collections-value" class="govuk-summary-list__value" data-testid="more-details-business-collections">
                                    @Model.BusinessCollectionsNotes
                                </dd>
                                <dd class="govuk-summary-list__actions">
                                    <a data-testid="more-detail-support-buisiness-collections-change" class="govuk-link govuk-link--no-visited-state" href="#" data-testid="change-more-details-business-collections">
                                        @Localizer["change"]
                                    </a>
                                </dd>
                            </div>
                            <div  class="govuk-summary-list__row @(Model.CommunicationsPercentage.GetValueOrDefault() > 0 ? string.Empty : hiddenClass)">
                                <dt data-testid="communications" class="govuk-summary-list__key">
                                    @Localizer["communications"]
                                </dt>
                                <dd data-testid="communications-value" class="govuk-summary-list__value" data-testid="communication">
                                    @Model.CommunicationsPercentage% 
                                </dd>
                                <dd class="govuk-summary-list__actions">
                                    <a data-testid="communications-change" class="govuk-link govuk-link--no-visited-state" href="#" data-testid="change-communication">
                                        @Localizer["change"]
                                    </a>
                                </dd>
                            </div>

                            <div  class="govuk-summary-list__row @(Model.CommunicationsPercentage.GetValueOrDefault() > 0 ? string.Empty : hiddenClass)">
                                <dt data-testid="more-detail-communications" class="govuk-summary-list__key">
                                    @Localizer["more-detail-communications"]
                                </dt>
                                <dd data-testid="more-detail-communications-value" class="govuk-summary-list__value" data-testid="more-details-communication">
                                    @Model.CommunicationsNotes
                                </dd>
                                <dd class="govuk-summary-list__actions">
                                    <a data-testid="more-detail-communications-change" class="govuk-link govuk-link--no-visited-state" href="#" data-testid="change-more-details-communication">
                                        @Localizer["change"]
                                    </a>
                                </dd>
                            </div>
                            <div  class="govuk-summary-list__row @(Model.DevelopingMarketsPercentage.GetValueOrDefault() > 0 ? string.Empty : hiddenClass)">
                                <dt data-testid="developing-new-markets" class="govuk-summary-list__key">
                                    @Localizer["developing-new-markets"]
                                </dt>
                                <dd data-testid="developing-new-markets-value" class="govuk-summary-list__value" data-testid="developing-markets">
                                    @Model.DevelopingMarketsPercentage%
                                </dd>
                                <dd class="govuk-summary-list__actions">
                                    <a data-testid="developing-new-markets-change" class="govuk-link govuk-link--no-visited-state" href="#" data-testid="change-developing-markets">
                                        @Localizer["change"]
                                    </a>
                                </dd>
                            </div>

                            <div  class="govuk-summary-list__row @(Model.DevelopingMarketsPercentage.GetValueOrDefault() > 0 ? string.Empty : hiddenClass)">
                                <dt data-testid="more-detail-developing-markets" class="govuk-summary-list__key">
                                    @Localizer["more-detail-developing-markets"]
                                </dt>
                                <dd data-testid="more-detail-developing-markets-value" class="govuk-summary-list__value" data-testid="more-details-developing-markets">
                                    @Model.DevelopingMarketsNotes
                                </dd>
                                <dd class="govuk-summary-list__actions">
                                    <a data-testid="more-detail-developing-change" class="govuk-link govuk-link--no-visited-state" href="#" data-testid="change-more-details-developing-markets">
                                        @Localizer["change"]
                                    </a>
                                </dd>
                            </div>
                            <div  class="govuk-summary-list__row @(Model.DevelopingNewUsesPercentage.GetValueOrDefault() > 0 ? string.Empty : hiddenClass)">
                                <dt data-testid="developing-new-uses" class="govuk-summary-list__key">
                                    @Localizer["developing-new-uses"]
                                </dt>
                                <dd data-testid="developing-new-uses-value" class="govuk-summary-list__value" data-testid="developing-new-uses">
                                    @Model.DevelopingNewUsesPercentage%
                                </dd>
                                <dd class="govuk-summary-list__actions">
                                    <a data-testid="developing-new-uses-change" class="govuk-link govuk-link--no-visited-state" href="#" data-testid="change-developing-new-uses">
                                        @Localizer["change"]
                                    </a>
                                </dd>
                            </div>
                            <div  class="govuk-summary-list__row @(Model.DevelopingNewUsesPercentage.GetValueOrDefault() > 0 ? string.Empty : hiddenClass)">
                                <dt data-testid="more-detail-developing-new-uses" class="govuk-summary-list__key">
                                    @Localizer["more-detail-developing-new-uses"]
                                </dt>
                                <dd data-testid="more-detail-developing-new-uses-value" class="govuk-summary-list__value" data-testid="more-details-developing-new-uses">
                                    @Model.DevelopingNewUsesNotes
                                </dd>
                                <dd class="govuk-summary-list__actions">
                                    <a data-testid="more-detail-developing-new-uses-change" class="govuk-link govuk-link--no-visited-state" href="#" data-testid="change-more-details-developing-new-uses">
                                        @Localizer["change"]
                                    </a>
                                </dd>
                            </div>
                        </dl>

                     
                        <div class="govuk-button-group">
                            <a class="govuk-button" data-module="govuk-button" data-testid="continue" asp-controller="Accreditation" asp-action="Index">
                                @Localizer["confirm-and-continue"]
                            </a>
                            <a class="govuk-button govuk-button--secondary" data-module="govuk-button" data-testid="save">
                                @Localizer["save-and-continue-later"]
                            </a>
                        </div>


                    </div>

                </div>
            </main>
        </div>

    </main>
</div>