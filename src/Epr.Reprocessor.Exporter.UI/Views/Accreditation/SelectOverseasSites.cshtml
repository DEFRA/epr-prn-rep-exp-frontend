@using Epr.Reprocessor.Exporter.UI.ViewModels.Accreditation
@using Epr.Reprocessor.Exporter.UI.App.Constants

@using static Epr.Reprocessor.Exporter.UI.Controllers.AccreditationController
@model SelectOverseasSitesViewModel
@{
    ViewData["Title"] = Localizer["title"];
    var errorsVM = new ErrorsViewModel(ViewData.ModelState.ToErrorDictionary(), Localizer);
}

<h1 class="govuk-heading-l" data-testid="heading">@Localizer["heading"]</h1>
@if (!ViewData.ModelState.IsValid)
{
    @await Html.PartialAsync("Partials/Govuk/_ErrorSummary", errorsVM)
}
<p class="govuk-body" data-testid="description-1">@Localizer["description_1"]</p>
<p class="govuk-body" data-testid="description-2">@Localizer["description_2"]</p>

<div class="govuk-width-container">
    <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <form method="post" class="govuk-form-group" asp-antiforgery="true" >
                    
                    <div class="govuk-form-group">
                        <div id="SelectedOverseasSitesCount" class="govuk-form-group @(ViewData.ModelState.IsValid ? string.Empty : "govuk-form-group--error")">
                            <fieldset class="govuk-fieldset">
                                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                                    <h1 class="govuk-heading-l govuk-!-margin-bottom-4"></h1>
                                </legend>
                                <span asp-validation-for="SelectedOverseasSitesCount" data-testid="error-message" class="govuk-error-message"></span>
                                <table class="govuk-table" aria-describedby="sub-heading">
                                    <thead class="govuk-table__head govuk-visually-hidden">
                                        <tr class="govuk-table__row">
                                            <th scope="col" class="govuk-table__header">Overseas Site</th>
                                            <th scope="col" class="govuk-table__header">Group</th>
                                        </tr>
                                    </thead>
                                    <tbody class="govuk-table__body">
                                        @foreach (var site in Model.OverseasSites)
                                        {
                                            <tr class="govuk-table__row">
                                                <td class="govuk-table__cell">
                                                    <div class="govuk-checkboxes__item">
                                                        <input class="govuk-checkboxes__input"
                                                               type="checkbox"
                                                               id="@site.Value"
                                                               name="SelectedOverseasSites"
                                                               data-testid="overseas-site-@site.Value"
                                                               value="@site.Value"
                                                        @if (Model.SelectedOverseasSites.Contains(site.Value))
                                                        {
                                                            <text> checked </text>
                                                        }
                                                        />
                                                        <label class="govuk-label govuk-checkboxes__label" for="@site.Value">@site.Text</label>
                                                        <input type="hidden" name="OverseasSites[@Model.OverseasSites.IndexOf(site)].Value" value="@site.Value" />
                                                        <input type="hidden" name="OverseasSites[@Model.OverseasSites.IndexOf(site)].Text" value="@site.Text" />
                                                        <input type="hidden" name="OverseasSites[@Model.OverseasSites.IndexOf(site)].Group.Name" value="@site.Group.Name" />
                                                    </div>
                                                </td>
                                                <td class="govuk-table__cell govuk-!-text-break-word"><p class="govuk-!-text-break-word">@site.Group.Name</p></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <input type="hidden" asp-for="ApplicationType" value="@Model.ApplicationType" />
                                <input type="hidden" asp-for="SiteAddress" value="@Model.SiteAddress" />
                                <input type="hidden" asp-for="@Model.Accreditation.MaterialName" value="@Model?.Accreditation.MaterialName" />
                                <input type="hidden" asp-for="@Model.Accreditation.ApplicationTypeId" value="@Model?.Accreditation.ApplicationTypeId" />
                                <input type="hidden" asp-for="@Model.Accreditation.ExternalId" value="@Model.Accreditation.ExternalId" />
                            </fieldset>
                        </div>
                    </div>
                    <div class="govuk-button-group">
                        <button type="submit" class="govuk-button" name="action" data-testid="continue" value="continue" data-module="govuk-button">
                            @SharedLocalizer["saveandcontinue"]
                        </button>
                        <button type="submit" class="govuk-button govuk-button--secondary" name="action" data-testid="save" value="save" data-module="govuk-button">
                            @SharedLocalizer["saveandcomebacklater"]
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>