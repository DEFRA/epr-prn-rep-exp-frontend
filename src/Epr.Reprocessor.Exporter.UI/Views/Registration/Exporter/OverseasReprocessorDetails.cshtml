@using Epr.Reprocessor.Exporter.UI.ViewModels.Registration.Exporter

@model OverseasReprocessorSiteViewModel
@{
    ViewData["Title"] = "Enter details for first overseas reprocessing site";
    ViewData["UseNewLayout"] = true;
}

<h1 class="govuk-heading-l">Enter details for first overseas reprocessing site</h1>
<p class="govuk-body">You will be able to add more sites after you've added this one.</p>

<form asp-action="Index" method="post" novalidate>
    <div class="govuk-form-group">
        <label class="govuk-label" asp-for="Country">Country the site is in</label>
        <select asp-for="Country" class="govuk-select">
            <option value="">Choose a country</option>
            @foreach (string country in Model.Countries)
            {
                <option>@country</option>
            
            }
        </select>
    </div>

    <div class="govuk-form-group">
        <label class="govuk-label" asp-for="OrganisationName">Organisation name</label>
        <input class="govuk-input" asp-for="OrganisationName" />
    </div>

    <div class="govuk-form-group">
        <label class="govuk-label" asp-for="AddressLine1">Address line 1</label>
        <input class="govuk-input" asp-for="AddressLine1" />
    </div>

    <div class="govuk-form-group">
        <label class="govuk-label" asp-for="AddressLine2">Address line 2 (optional)</label>
        <input class="govuk-input" asp-for="AddressLine2" />
    </div>

    <div class="govuk-form-group">
        <label class="govuk-label" asp-for="CityorTown">Town or city</label>
        <input class="govuk-input" asp-for="CityorTown" />
    </div>

    <div class="govuk-form-group">
        <label class="govuk-label" asp-for="StateProvince">State, province or region (optional)</label>
        <span class="govuk-hint">Leave blank if not applicable</span>
        <input class="govuk-input" asp-for="StateProvince" />
    </div>

    <div class="govuk-form-group">
        <label class="govuk-label" asp-for="Postcode">Postcode or similar (optional)</label>
        <span class="govuk-hint">Some countries use numbers, others use a mix</span>
        <input class="govuk-input" asp-for="Postcode" />
    </div>

    <div class="govuk-form-group">
        <label class="govuk-label" asp-for="SiteCoordinates">Latitude and longitude</label>
        <span class="govuk-hint">e.g., 51.49567591079484, -0.12634732734828216</span>
        <input class="govuk-input" asp-for="SiteCoordinates" />
    </div>

    <div class="govuk-form-group">
        <label class="govuk-label" asp-for="ContactFullName">Full name of contact</label>
        <span class="govuk-hint">This must be a senior contact in the organisation</span>
        <input class="govuk-input" asp-for="ContactFullName" />
    </div>

    <div class="govuk-form-group">
        <label class="govuk-label" asp-for="Email">Email</label>
        <input class="govuk-input" asp-for="Email" />
    </div>

    <div class="govuk-form-group">
        <label class="govuk-label" asp-for="PhoneNumber">Phone number</label>
        <input class="govuk-input" asp-for="PhoneNumber" />
    </div>

    <button class="govuk-button" type="submit">Save and continue</button>
    <button class="govuk-button govuk-button--secondary" name="saveLater" value="true" formaction="@Url.Action("SaveAndReturnLater", "Exporter")">Save and come back later</button>
</form>